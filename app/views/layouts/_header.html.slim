.header
  .container
    .header-logo
      h1.header-title
        = link_to "AskCode", root_path

    .header-nav
      - if current_user
        = link_to "#{current_user.login}", user_path(current_user), class: 'button button-light button-small'
        '
        = link_to t('header.settings'), edit_user_path(session[:user_id]), class: 'button button-light button-small'
        '
        = link_to t('header.log_out'), session_path, method: :delete, class: 'button button-light button-small'
      - else
        = link_to t('header.sign_up'), new_user_path, class: 'button button-light button-small'
        '
        = link_to t('header.log_in'), new_session_path, class: 'button button-light button-small'
