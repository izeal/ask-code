<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="utf-8">
  <title>AskCode</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
</head>

<body>

<div class="header">
  <div class="container">

    <div class="header-logo">
      <h1 class="header-title"><%= link_to "AskCode", root_path %></h1>
    </div>

    <div class="header-nav">
      <% if current_user %>
        <%= link_to "@#{current_user.login}", user_path(current_user) %> | <%= link_to "Настройки", edit_user_path(session[:user_id]) %> | <%= link_to 'Выйти', logout_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign up!', signup_path,
          class: 'button button-light button-small' %>
        <%= link_to 'Log in', login_path,
          class: 'button button-light button-small' %>
      <% end %>
    </div>

  </div>
</div>

<div class="content">
  <div class="container">

    <% if flash.any? %>
      <div class="content-wrapper buffer-both">
        <% flash.each do |name, message| %>
          <%= content_tag :div, message, class: "flash-#{name}" %>
        <% end %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</div>

</body>

</html>
